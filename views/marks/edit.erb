<form action="/marks/<%= @mark.id %>/edit" method="post">
<div class="i-am-centered">
  <div class="container">
    <div class="card my-3 box-shadow" >
      <img class="card-img-top" src="/uploads/mark/image/<%= @mark.id %>/image_<%= @mark.id %>.<%= "#{@mark.image.path}".rpartition('.').last %>" alt="Card image cap">
      <div class="card-body d-flex flex-column">

        <div class="form-group">
          <label for="post_title">Название:</label>
          <input  id="mark_car_number" class="form-control" value="<%= @mark.title %>" name="mark[title]" type="text"  style="width=90%"/>
        </div>
        
        <div class="form-group">
          <label for="post_title">Номер авто:</label>
          <input  id="mark_car_number" class="form-control" value="<%= @mark.car_number %>" name="mark[car_number]" type="text"  style="width=90%"/>
        </div>
        
        <div class="form-group">
          <label for="post_title">Автор:</label>
          <input  id="mark_car_number" class="form-control" value="<%= @mark.author %>" name="mark[author]" type="text"  style="width=90%"/>
        </div>

        <div class="form-group">
          <label for="exampleFormControlTextarea1">Описание метки</label>
          <textarea  class="form-control" name="mark[description]" type="text" id="exampleFormControlTextarea1" rows="3"><%= @mark.description %></textarea>
        </div>

        <div class="form-group">
          <label for="post_title">Теги (через пробел):</label>
          <input id="mark_car_number" class="form-control" value="<%= @mark.tags %>" name="mark[tags]" type="text"  style="width=90%"/>
        </div>

        <div class="mt-auto">
          <p>Метка создана: <%= @mark.created_at %></p>
          <p>Метка обновлена: <%= @mark.updated_at %></p>
        </div>
      </div>
      <div class="card-footer text-muted text-center">
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </div>
  </div>
</div>
</form>